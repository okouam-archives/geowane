= content_for :title, "Dashboard"

.features.summary
  .block
    %br
    .block_head
      %h2 Dashboard
    .block_content
      #portlets
        #left.column
          .portlet
            .portlet-header
              =t :resolved_issues
            .portlet-content.nopadding
              %table
                %thead
                  %tr
                    %th
                      =t :titre
                    %th
                      Raised By
                    %th
                      Opened
                    %th
                      Closed
                - for ticket in @resolved
                  %tr
                    %td
                      =link_to ticket.title, ticket.url
                    %td
                      = ticket.creator_name
                    %td
                      = DateTime.parse(ticket.created_at).strftime("%d-%m-%Y")
                    %td
                      = DateTime.parse(ticket.updated_at).strftime("%d-%m-%Y")
        .column
          .portlet
            .portlet-header
              Oustanding Issues
            .portlet-content.nopadding
              %table
                %thead
                  %tr
                    %th
                      =t :title
                    %th
                      Raised By
                    %th
                      Opened
                    %th
                      Status
                - for ticket in @outstanding
                  %tr
                    %td
                      =link_to ticket.title, ticket.url
                    %td
                      = ticket.creator_name
                    %td
                      = DateTime.parse(ticket.created_at).strftime("%d-%m-%Y")
                    %td
                      = ticket.state