= content_for :title, "Export Selection"

- content_for :javascripts do
  = javascript_include_tag "/assets/controllers/exports/init", :debug => Rails.env.development?

.block
  .block_head
    %h2 Create Selection
  .block_content
    = semantic_form_for :s, :url => "/exports/prepare" do |form|
      #portlets
        #left.column
          .portlet.countries
            .portlet-header
              Boundaries
            .portlet-content.nopadding
              %table.main
                %thead
                  %tr
                    %th.selector
                      %input{:type=>"checkbox"}
                    %th Country
                %tbody
                  - for country in @all_countries
                    %tr
                      %td.selector
                        %input{:type=>"checkbox", :value=>country[1]}
                      %td
                        = country[0]
          .portlet.categories
            .portlet-header
              Partner Categories
              %span{:style=>"margin-right: 0"}
                Partner:
                = select_tag(:partner, options_for_select(@all_partners))
            .portlet-content.nopadding
              %table.main
                %thead
                  %tr
                    %th.selector
                      %input{:type=>"checkbox"}
                    %th Category
                %tbody
                  - for category in @all_categories
                    %tr
                      %td.selector
                        %input{:type=>"checkbox", :value=>category[1]}
                      %td
                        = category[0]
        .column
          .portlet.workflow
            .portlet-header
              Workflow
            .portlet-content.nopadding
              %table.main
                %thead
                  %tr
                    %th.selector
                      %input{:type=>"checkbox"}
                    %th Status
                %tbody
                  - for status in @all_statuses
                    %tr
                      %td.selector
                        %input{:type=>"checkbox", :value=>status[1]}
                      %td
                        = status[0]
          .portlet.users
            .portlet-header
              Users
            .portlet-content.nopadding
              %table.main
                %thead
                  %tr
                    %th.selector
                      %input{:type=>"checkbox"}
                    %th Username
                %tbody
                  - for user in @all_users
                    %tr
                      %td.selector
                        %input{:type=>"checkbox", :value=>user[1]}
                      %td
                        = user[0]
      %div{:style=>"float: left; font-size: 16px; margin-left: 15px; margin-top: 3px"}
        %b.location-count
          0
        locations will be exported.
      %input{:class=>"button long", :style=>"float: right; margin-top: 20px; margin-right: 15px; margin-bottom: 20px", :type=>"submit", :value=>"Export"}