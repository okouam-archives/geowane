= semantic_form_for object, :html => { :enctype => "multipart/form-data"} do |form|
  = form.input :french, :input_html => { :class => "text" }
  = form.input :english, :input_html => { :class => "text" }
  = form.input :garmin_french, :required => true, :input_html => { :class => "text" }
  = form.input :garmin_english, :required => true, :input_html => { :class => "text" }
  = form.input :code, :label => "Garmin Code", :required => true, :input_html => { :class => "text" }
  = form.input :navitel_french, :input_html => { :class => "text" }
  = form.input :navitel_english, :input_html => { :class => "text" }
  = form.input :navitel_code, :input_html => { :class => "text" }
  = form.input :navteq_french, :input_html => { :class => "text" }
  = form.input :navteq_english, :input_html => { :class => "text" }
  = form.input :navteq_code, :input_html => { :class => "text" }
  = form.input :sygic_french, :input_html => { :class => "text" }
  = form.input :sygic_english, :input_html => { :class => "text" }
  = form.input :sygic_code, :input_html => { :class => "text" }
  = form.input :icon, :as => :hidden
  - if object.persisted? && object.icon
    %label
      Icon
    = image_tag "/images/" + object.icon
  - if object.persisted? && object.icon
    %span{:style=>"position: relative; top: -15px; left: 5px"}
      = link_to "Change Icon", change_icon_category_path(object.id), :class => "open_facebox"
  = form.commit_button :button_html => { :class => "submit long" }