= content_for :title, "New Import"

.block
  .block_head
    %h2 New Import
  .block_content
    = semantic_form_for @import, :html => { :enctype => "multipart/form-data"} do |f|
      = f.input :input, :as => :file, :label => "Data File"
      = f.input :user_id, :as => :select, :label => "Author", :collection => @all_users
      = f.input :import_format, :collection => object.enums(:import_format).select_options.map {|option| [option[0].upcase, option[1].upcase]}
      = f.commit_button :button_html => { :class => "submit long" }, :label => "Process File"