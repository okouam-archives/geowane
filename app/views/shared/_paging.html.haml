- unless collection.nil? || collection.empty?
  = select_tag "pages", options_for_select([ "10", "20", "50", "100", "1000", "5000"], page_size), :style => "width: 70px; padding: 2px; margin-top: -3px"
  = will_paginate collection, :params => @params, :class => "paggination right"
 
:javascript
  $(document).ready(function() {
    $("#pages").change(function() {
      window.location = $.param.querystring(window.location.href, {per_page: $(this).val(), page: 1});
    });
  });
