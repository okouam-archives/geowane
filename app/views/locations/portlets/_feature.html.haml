.feature.portlet
  .portlet-header
    Feature
    %span
      = link_to "Save", "#"
  .portlet-content
    = form_for @location do |form|
      = form.input :name, :input_html => {:class => "text"}, :required => false
      = form.input :long_name, :input_html => {:class => "text"}
      = form.input :city, :as => :select, :collection => City.dropdown_items, :required => false, :label => "City"
      - if @location.persisted? && current_user.may_change_status_of_location?(@location, nil)
        = form.input :status, :collection => workflow_actions(current_user, @location), :include_blank => false

- if @location.persisted?
  = render :partial => "locations/portlets/tags", :locals => {:location => @location}

- if @location.persisted?
  .portlet.ui-widget.ui-widget-content.ui-helper-clearfix.ui-corner-all
    .portlet-header.ui-widget-header.ui-corner-top
      Labels
    .portlet-content
      %div.tags
        %label




