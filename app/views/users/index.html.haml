= content_for :title, "View Categories"

%div.block
  %div.block_head
    %h2
      Users
    %a{:style=>"float: right; font-size: 11px", :href=> new_user_path(page: params[:page], per_page: params[:per_page])}
      = image_tag("Helveticons-306.gif", :style=>"height: 20px; position: relative; top: 5px")
      New User
  %div.block_content
    %form{:method => "post"}
      #portlets
        .portlet
          .portlet-content.nopadding.table
            %table
              %thead
                %tr
                  %th.selector
                    %input{:type=>"checkbox"}
                  %th Name
                  %th{:style=>"width: 150px"} Last Logged In At
                  %th{:style=>"width: 80px; text-align: center"} Active
                  %th{:style=>"width: 70px"} Role
              %tbody
                - for user in @users
                  %tr
                    %td.selector
                      %input{:type=>"checkbox"}
                    %td= link_to user.login, user_path(user)
                    %td= user.last_login_at
                    %td{:style=>"text-align: center"}
                      %input{:type=>"checkbox", :checked => user.is_active, :disabled => "true"}
                    %td= user.role_name
            = render :partial => "shared/paging", :locals => {:collection => @users, :page_size => @per_page}

