.comments.portlet
  .portlet-header
    span
      float: right
  textarea
    width: 407px
    height: 60px
  .buttons
    a
      float: right
      margin-right: 10px
      margin-top: 5px
  .editor
    display: none
  .details
    .created_at
      font-size: 11px
      font-style: italic
    .username
      font-size: 12px
      font-style: italic
      top: -2px
      position: relative
  .editor
    h3
      margin-top: 10px
    li
      margin-bottom: 3px
  .portlet-content > ul
    margin-top: 10px
    .author
      float: left
    .details
      margin-left: 10px
      float: left
      width: 330px
      position: relative
      top: -4px
  .portlet-content > ul
    img
      float: left
      border: 1px solid #777

.map.portlet
  .portlet-header span
    display: none
  #mappanel
    height: 311px
    width: 100%

.coordinates.portlet
  label
    font-weight: bold
    display: block
  li
    width: 200px
    margin-bottom: 5px
  ul
    float: left
  table
    width: 100%
    border-collapse: collapse
  td, th
    line-height: normal
    font-size: 11px
    padding: 5px

#portlets
  padding: 0 10px
  .fixed
    cursor: auto
  .column
    width: 451px
    float: left
    padding-bottom: 0
  .column#left
    margin-right: 17px

.portlet
  margin: 0 0 1em 0
  font-family: "Lucida Grande",Verdana,sans-serif
  font-size: 11px
  border: 1px solid #ccc
  background: #ffffff url(<%= asset_path "ui-bg_flat_75_ffffff_40x100.png" %>) 50% 50% repeat-x
  color: #222222
  -moz-border-radius: 4px
  -webkit-border-radius: 4px
  .portlet-header
    cursor:auto
    border: 1px solid #aaaaaa
    background: #cccccc url(<%= asset_path "ui-bg_highlight-soft_75_cccccc_1x100.png" %>) 50% 50% repeat-x
    color: #222222
    font-weight: bold
    -moz-border-radius-topleft: 4px
    -webkit-border-top-left-radius: 4px
    -moz-border-radius-topright: 4px
    -webkit-border-top-right-radius: 4px
    margin: 0
    padding: 4px 6px 5px
    font-size: 12px
    border: none !important
    color: #333 !important
    font-family: "Trebuchet MS", Arial, Helvetica, sans-serif
    cursor:move
    .ui-icon
      float: right
      cursor:pointer
    img
      float:left
      margin-right: 5px
    span
      float: right
      margin-right: 5px
      font-variant: small-caps
      a:hover
        color: white
  .portlet-content
    padding: 0.8em
    color: #333
