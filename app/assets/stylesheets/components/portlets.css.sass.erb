.map.portlet
  .portlet-header span
    display: none
  #mappanel
    height: 311px
    width: 100%

.coordinates.portlet
  label
    font-weight: bold
    display: block
  li
    width: 200px
    margin-bottom: 5px
  ul
    float: left
  table
    width: 100%
    border-collapse: collapse
  td, th
    line-height: normal
    font-size: 11px
    padding: 5px

#portlets
  padding: 0 10px
  .column
    width: 432px
    float: left
    padding-bottom: 0
  .column#left
    margin-right: 16px

.portlet
  margin: 0 0 1em 0
  font-family: "Lucida Grande",Verdana,sans-serif
  font-size: 11px
  border: 1px solid #ccc
  color: #222222
  -moz-border-radius-bottomleft: 4px
  -webkit-border-bottom-left-radius: 4px
  -moz-border-radius-bottomright: 4px
  -webkit-border-bottom-right-radius: 4px
  .portlet-header
    cursor:auto
    border: 1px solid #ccc
    background-color: #efefef
    color: #222222
    margin: 0
    padding: 4px 6px 5px
    font-size: 11px
    font-weight: bold
    border: none !important
    color: #444 !important
    font-family: "Helvetica Neue", Helvetica, Arial, sans-serif
    cursor:move
    .ui-icon
      float: right
      cursor:pointer
    img
      float:left
      margin-right: 5px
    span
      float: right
      margin-right: 5px
      font-variant: small-caps
      a:hover
        color: white
  .portlet-content
    padding: 0.8em
    color: #333
    border-top: 1px solid #ccc !important