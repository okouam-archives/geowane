.block
  border: 1px solid #ccc
  background-color: white
  border-top: 0
  .block_content
    ol
    padding-bottom: 0
    ul.block_tabs
      padding-bottom: 0
      li
        float: left
        background: none
        padding: 5px 10px 5px 10px
        font-variant: small-caps
        border: 1px solid #ccc
        border-bottom-color: white
        margin-bottom: -1px
  table.layout tr td, .block table.layout tr th
    border-bottom-width: 0
    line-height: normal
    padding: 10px
    text-align: left
    background-color: white !important
  form
    li
      list-style-type: none
      margin-bottom: 10px
    .commit
      margin-top: 20px
    label
      display: block
      margin-bottom: 2px

