.block
  .block_head
    background: url(<%= asset_path "admin/bhead.gif" %>) no-repeat scroll 0 0 transparent
    height: 54px
    line-height: 54px
    overflow: hidden
    padding: 0 20px
    h2
      color: #555555
      float: left
      font-family: "Titillium999",Helvetica,Arial,sans-serif
      font-size: 24px
      font-weight: normal
      text-shadow: 1px 1px 0 #FFFFFF
      text-transform: uppercase
      a
        border-radius: 3px 3px 3px 3px
        font-family: Arial, sans-serif
        font-size: 11px
        margin-left: 8px
        padding: 3px 8px
        position: relative
        text-decoration: none
        text-shadow: none
        top: -1px
        text-transform: none
  .block_content
    ol
    padding-bottom: 0
    ul.block_tabs
      padding-bottom: 0
      li
        float: left
        background: none
        padding: 5px 10px 5px 10px
        font-variant: small-caps
        border: 1px solid #ccc
        border-bottom-color: white
        margin-bottom: -1px
  table.layout tr td, .block table.layout tr th
    border-bottom-width: 0
    line-height: normal
    padding: 10px
    text-align: left
    background-color: white !important
  form
    li
      list-style-type: none
      margin-bottom: 10px
    .commit
      margin-top: 20px
    label
      display: block
      margin-bottom: 2px

