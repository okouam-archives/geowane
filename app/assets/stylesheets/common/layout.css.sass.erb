*
  padding: 0
  margin: 0

body
  background: #fbfbfb url(<%= asset_path "admin/bg.jpg" %>) 0 0 repeat
  font-family: "Lucida Grande", Verdana, sans-serif
  font-size: 12px
  color: #666
  line-height: 1.4em

p
  padding-bottom: 15px

img, a img
  border: 0

ul li
  list-style: none

.clear
  clear: both

a
  color: #008ee8
  text-decoration: none
  outline: none

a:hover
  color: #ec8526
  text-decoration: none
  text-decoration: underline
  color: #C00

a, a:active, a:link, a:visited
  text-decoration: none
  color: #069

#hld
  border-top: 5px solid #467B3D
  background: url(<%= asset_path "admin/hld.jpg" %>) 0 0 repeat-x
  min-height: 402px

.wrapper
  width: 958px
  margin: 0 auto
  padding-top: 20px

.block
  background: url(<%= asset_path "admin/bnd.gif" %>) bottom center no-repeat
  padding-bottom: 5px
  margin-bottom: 25px
  clear: both
  .block_content
    overflow: hidden
    background-color: white
    border-left: 1px solid #ccc
    border-right: 1px solid #ccc
    padding: 28px 28px 0
    width: 900px
    h1, h2
      font-family: Helvetica, Arial, sans-serif
      font-size: 18px
      font-weight: normal
      color: #454545
      margin-bottom: 10px
    h3
      font-family: Helvetica, Arial, sans-serif
      font-size: 14px
      font-weight: bold
      color: #666
      margin-bottom: 5px
    h4
      font-family: Arial, Helvetica, sans-serif
      font-size: 13px
      font-weight: bold
      color: #666
      margin-bottom: 5px

/* Forms */

select
  width: 409px
  background: #fefefe
  border: 1px solid #bbb
  font-family: "Lucida Grande", Verdana, sans-serif
  color: #333
  padding: 2px
  font-size: 11px
  -webkit-border-radius: 3px
  -moz-border-radius: 3px
  border-radius: 3px
  outline: none
  vertical-align: middle
  margin-bottom: 10px

.block form
  p
    overflow: hidden
    clear: both
  label
    font-family: "Lucida Grande", Verdana, sans-serif
    font-size: 11px
    font-weight: bold
    color: #555
    margin-right: 10px
    vertical-align: middle
  input
    margin-bottom: 10px
  input.text.medium
    width: 600px
  input.text.big
    width: 904px
  input.text.date_picker
    width: 100px
  textarea
    width: 409px
    height: 140px
    background: #fefefe
    border: 1px solid #bbb
    font-family: "Lucida Grande", Verdana, sans-serif
    font-size: 11px
    color: #333
    padding: 4px
    -webkit-border-radius: 3px
    -moz-border-radius: 3px
    border-radius: 3px
    outline: none
  input.radio, input.checkbox
    vertical-align: middle

input[type='text'], .block input[type='email'], .block input[type='tel'], .block input[type='url'], .block input[type='password']
  width: 400px
  background: #fefefe
  border: 1px solid #bbb
  font-family: "Lucida Grande", Verdana, sans-serif
  font-size: 11px
  color: #333
  padding: 4px
  -webkit-border-radius: 3px
  -moz-border-radius: 3px
  border-radius: 3px
  outline: none
  vertical-align: middle

.block form input.file
  width: 250px
  height: 20px
  background: #fefefe
  border: 1px solid #bbb
  border-right: 0
  font-family: "Lucida Grande", Verdana, sans-serif
  font-size: 14px
  color: #333
  padding: 4px
  -webkit-border-top-left-radius: 3px
  -webkit-border-bottom-left-radius: 3px
  -moz-border-radius-topleft: 3px
  -moz-border-radius-bottomleft: 3px
  border-top-left-radius: 3px
  border-bottom-left-radius: 3px
  outline: none


.block form .note
  padding-left: 10px
  font-size: 11px
  font-weight: bold
  color: #757575
  vertical-align: middle


.block form .note.error
  color: #e3302c

.block.small.center.login
  margin: 0 auto
  margin-top: 100px
  width: 470px
  float: none

#content
  background: url(<%= asset_path "bg_content.gif" %>) left top repeat-x #FFFFFF
  width: 938px !important
  border-left: 1px solid #9c9c9c
  border-right: 1px solid #9c9c9c
  padding: 10px 0px

#textcontent
  padding: 10px !important
  width: 900px !important

#wrapper
  padding-bottom: 10px !important
  background: url(<%= asset_path "bg_content_bottom.gif" %>) center bottom no-repeat

#footer
  text-align: center
  padding: 15px 0px
  color: #666
  font-size: 11px

.hidden
  display: none

.nopadding
  padding: 0px !important

.floatLeft
  float: left

.floatRight
  float: right

.bulk-actions
  float: right
  margin-bottom: 12px
  select
    width: 150px
    margin-bottom: 0

