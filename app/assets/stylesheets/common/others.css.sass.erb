button, input[type="button"], input[type="reset"], input[type="submit"]
  cursor: pointer

.inline-delete
  position: relative
  top: 3px

.widget
  select
    width: 650px
  a.action
    float: right
    margin-left: 20px
    margin-top: 5px

.widget.comment_widget textarea
  border: 1px solid #ccc
  width: 99%
  margin-bottom: 5px

.change_status #location_status
  padding: 1px
  width: 200px
  font-size: 10px

.busybox
  position: absolute
  z-index: 999
  color: #fff
  background-color: #666
  margin: 0
  padding: 0
  opacity: 0.8
  filter: alpha(opacity=95)
  -ms-filter: "alpha(opacity=95)"

#search-parameters
  padding: 20px
  display: block
  margin-bottom: 10px
  input[type="text"]
    width: 190px
    padding: 3px
  input .button
    width: auto
  select
    width: 190px

#search-bar
  height: 55px
  border-bottom: 1px solid #ccc
  background-color: white
  background-color: #f1f1f1
  .wrapper
    padding-top: 0
    .search
      input[type="text"]
        font-size: 16px
        color: #434343
        font-size: 14px
        margin-left: 40px
        border: 1px solid #aaa
        padding: 5px
        padding-right: 20px
        width: 400px
        position: relative
        top: -8px
    .aoq
      background: url("//ssl.gstatic.com/ui/v1/disclosure/light-grey-disclosure-arrow-down.png") no-repeat scroll center center transparent
      height: 4px
      padding: 11px 5px
      width: 7px
      cursor: pointer
    button#submit
      position: relative
      top: -4px
      cursor: pointer
      padding: 0
      border: 0 none
      margin-left: -15px
      background-color: inherit
      div
        background-color: #4D90FE
        background-image: -moz-linear-gradient(center top , #4D90FE, #4787ED)
        width: 80px
        border: 1px solid #3079ED
        color: #FFFFFF
        border-radius: 2px 2px 2px 2px
        img
          margin-top: 3px
          padding: 0
    button#submit.nodropdown
      margin-left: 3px

