a, a:active, a:link, a:visited
  text-decoration: none
  color: #069

a:hover
  text-decoration: underline
  color: #C00

#content
  background: url(<%= asset_path "bg_content.gif" %>) left top repeat-x #FFFFFF
  width: 938px !important
  border-left: 1px solid #9c9c9c
  border-right: 1px solid #9c9c9c
  padding: 10px 0px

#textcontent
  padding: 10px !important
  width: 900px !important

#wrapper
  padding-bottom: 10px !important
  background: url(<%= asset_path "bg_content_bottom.gif" %>) center bottom no-repeat

#footer
  text-align: center
  padding: 15px 0px
  color: #666
  font-size: 11px

.hidden
  display: none

.nopadding
  padding: 0px !important

button, input[type="button"], input[type="reset"], input[type="submit"]
  cursor: pointer

.bulk-actions
  float: right
  margin-bottom: 12px
  select
    width: 150px

.inline-delete
  position: relative
  top: 3px

.widget
  select
    width: 650px
  a.action
    float: right
    margin-left: 20px
    margin-top: 5px

.widget.comment_widget textarea
  border: 1px solid #ccc
  width: 99%
  margin-bottom: 5px

.change_status #location_status
  padding: 1px
  width: 200px
  font-size: 10px

.busybox
  position: absolute
  z-index: 999
  color: #fff
  background-color: #666
  margin: 0
  padding: 0
  opacity: 0.8
  filter: alpha(opacity=95)
  -ms-filter: "alpha(opacity=95)"

#search-parameters
  padding: 20px
  display: block
  margin-bottom: 10px
  input[type="text"]
    width: 190px
    padding: 3px
  input .button
    width: auto
  select
    width: 190px

#search-bar
  height: 55px
  border-bottom: 1px solid #ccc
  background-color: white
  background-color: #f1f1f1
  .wrapper
    padding-top: 0
    .search
      input[type="text"]
        font-size: 16px
        color: #434343
        font-size: 14px
        margin-left: 40px
        border: 1px solid #aaa
        padding: 5px
        padding-right: 20px
        width: 400px
        position: relative
        top: -8px
    .aoq
      background: url("//ssl.gstatic.com/ui/v1/disclosure/light-grey-disclosure-arrow-down.png") no-repeat scroll center center transparent
      height: 4px
      padding: 11px 5px
      width: 7px
      cursor: pointer
    button#submit
      position: relative
      top: -4px
      cursor: pointer
      padding: 0
      border: 0 none
      margin-left: -15px
      background-color: inherit
      div
        background-color: #4D90FE
        background-image: -moz-linear-gradient(center top , #4D90FE, #4787ED)
        width: 80px
        border: 1px solid #3079ED
        color: #FFFFFF
        border-radius: 2px 2px 2px 2px
        img
          margin-top: 3px
          padding: 0
    button#submit.nodropdown
      margin-left: 3px

.date_selector
  .nav
    clear: both
    margin-top: 15px
    .close
      float: right
      margin-right: 5px
    p.month_nav
      float: left
    p.year_nav
      float: left
      margin-left: 10px

.portlet
  margin: 0 0 1em 0
  font-family: "Lucida Grande",Verdana,sans-serif
  font-size: 11px
  border: 1px solid #ccc
  background: #ffffff url(<%= asset_path "ui-bg_flat_75_ffffff_40x100.png" %>) 50% 50% repeat-x
  color: #222222
  -moz-border-radius: 4px
  -webkit-border-radius: 4px
  .portlet-header
    cursor:auto
    border: 1px solid #aaaaaa
    background: #cccccc url(<%= asset_path "ui-bg_highlight-soft_75_cccccc_1x100.png" %>) 50% 50% repeat-x
    color: #222222
    font-weight: bold
    -moz-border-radius-topleft: 4px
    -webkit-border-top-left-radius: 4px
    -moz-border-radius-topright: 4px
    -webkit-border-top-right-radius: 4px
    margin: 0
    padding: 4px 6px 5px
    font-size: 12px
    border: none !important
    color: #333 !important
    font-family: "Trebuchet MS", Arial, Helvetica, sans-serif
    cursor:move
    .ui-icon
      float: right
      cursor:pointer
    img
      float:left
      margin-right: 5px
    span
      float: right
      margin-right: 5px
      font-variant: small-caps
      a:hover
        color: white
  .portlet-content
    padding: 0.8em
    color: #333

=inline-picker
  padding: 0
  .inline-picker-wrapper
    padding: 10px
    padding-left: 43px
    padding-top: 30px
    padding-bottom: 30px
    background-color: white
    border-bottom: 1px solid #ccc
    border-top: 1px solid #ccc

tr.inline-category-picker
  td
    +inline-picker
    select
      width: 715px
      margin-right: 10px
    input
      margin-left: 3px

tr.inline-comment-picker
  td
    +inline-picker

