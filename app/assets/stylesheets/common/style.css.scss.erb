* { padding:0; margin:0; }

@font-face {
	font-family: 'Titillium800';
	src: url('<%= asset_path("admin/fonts/TitilliumText800wt.eot") %>');
	src: url('<%= asset_path("admin/fonts/TitilliumText800wt.ttf") %>') format('truetype');
}



body {
	background: #fbfbfb url(<%= asset_path "admin/bg.jpg" %>) 0 0 repeat;
	font-family: "Lucida Grande", Verdana, sans-serif;
	font-size: 12px;
	color: #666;
	line-height: 1.4em;
	}

:focus { -moz-outline-style: none; }
	
p { padding-bottom: 15px; }
img, a img { border: 0; }
ul li { list-style: none; }
.clear { clear: both; }

a {
	color: #008ee8;
	text-decoration: none;
	outline: none;
	}
	
a:hover {
	color: #ec8526;
	text-decoration: none;
	}	
	
#hld {
	background: url(<%= asset_path "admin/hld.jpg" %>) 0 0 repeat-x;
	min-height: 402px;
	}
	
.wrapper {
	width:960px;
	margin:0 auto;
 position: relative;
	}

/* Blocks */

.block {	
	padding-bottom: 5px;
	margin-bottom: 25px;
	clear: both;
	padding: 10px 10px 0;
	width: 940px;
	-webkit-border-radius: 3px;
	-moz-border-radius: 3px;
	border-radius: 3px;
	}

/* Forms */

.block form p {
	overflow: hidden;
	clear: both;
	}

.block form label {
	font-family: "Lucida Grande", Verdana, sans-serif;
	font-size: 11px;
	font-weight: bold;
	color: #555;
	margin-right: 10px;
	vertical-align: middle;
	}

select {
	width: 418px;
	background: #fefefe;
	border: 1px solid #bbb;
	font-family: "Lucida Grande", Verdana, sans-serif;
	color: #333;
	padding: 2px;
  font-size: 11px;
	-webkit-border-radius: 3px;
	-moz-border-radius: 3px;
	border-radius: 3px;
	outline: none;
	vertical-align: middle;
	}

.block input[type='text'], .block input[type='email'], .block input[type='tel'], .block input[type='url'], .block input[type='password'] {
	width: 409px;
	background: #fefefe;
	border: 1px solid #bbb;
	font-family: "Lucida Grande", Verdana, sans-serif;
	font-size: 11px;
	color: #333;
	padding: 4px;
	-webkit-border-radius: 3px;
	-moz-border-radius: 3px;
	border-radius: 3px;
	outline: none;
	vertical-align: middle;
	}

.block form input.text.medium { width: 600px; }
.block form input.text.big { width: 904px; }
.block form input.text.date_picker { width: 100px; }

.block form textarea {
	width: 409px;
	height: 140px;
	background: #fefefe;
	border: 1px solid #bbb;
	font-family: "Lucida Grande", Verdana, sans-serif;
	font-size: 11px;
	color: #333;
  padding: 4px;
	-webkit-border-radius: 3px;
	-moz-border-radius: 3px;
	border-radius: 3px;
	outline: none;
	}
	
.block form input.radio,
.block form input.checkbox {
	vertical-align: middle;
	}

.block.small.center.login { margin-top: 100px; 	float: none; margin: 0 auto;}







