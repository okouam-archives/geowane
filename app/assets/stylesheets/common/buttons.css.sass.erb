.button, input[type="submit"]
  background: url(<%= asset_path "white-grad.png" %>) repeat-x scroll left top #F2F2F2
  -moz-box-sizing: content-box
  border-radius: 11px 11px 11px 11px
  border-style: solid
  border-width: 1px
  cursor: pointer
  font-size: 12px !important
  line-height: 13px
  padding: 3px 8px
  text-decoration: none
  font-family: Arial
  border-color: #BBBBBB
  color: #464646
  text-shadow: 0 1px 0 #FFFFFF

input.file
  font-family: Arial
  font-size: 12px !important
  padding: 3px
  border-style: solid

.button:hover
  border-color: #666666

.form_commit
  text-align: right
  margin-right: 10px
  margin-bottom: 15px
  li.commit
    margin-top: 0px

.action-button
  border: 0 none
  background-color: transparent
  position: relative
  top: -10px

.action-button div
  background-color: #D14836
  background-image: -moz-linear-gradient(center top , #DD4B39, #D14836)
  border: 1px solid transparent
  color: #FFFFFF
  padding-right: 20px
  padding-left: 20px
  text-transform: uppercase
  line-height: 25px
  font-size: 11px
  font-weight: 700
  font-family: Arial
  border-radius: 2px 2px 2px 2px
